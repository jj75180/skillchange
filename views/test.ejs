<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>上傳檔案</title>
</head>
<body>
  <form onsubmit="return false;" id="sendmail">
    <fieldset class="p-4">
      <label for="email">電子郵件：</label>
      <input type="email" id="recmail" name="recmail" placeholder="" class="border p-3 w-100 my-2">
      <label for="name">姓名：</label>
      <input type="text" id="username" name="username" placeholder="" class="border p-3 w-100 my-2">
      <br>
      <div class="alert alert-danger" role="alert" id="error" style="display:none;"></div>
      <div class="alert alert-success" role="alert" id="success" style="display:none;"></div>
        <button id="submit" type="submit" class="d-block py-3 px-4 bg-primary text-white border-0 rounded font-weight-bold">發送<i class="fas fa-signal-4 "></i></button>
    </fieldset>
</form>
</body>
</html>
<script>
  
  sendmail.addEventListener("submit",()=>{

    const mailinfo={
      recmail:recmail.value,
      username:username.value,
    }
    console.log(mailinfo);
    fetch("/api/mail",{
        method:"POST",
        body:JSON.stringify(mailinfo),
        headers:{
            "Content-Type":"application/json"
        }
    }).then(res=>res.json())
    .then(window.location.reload())
})


</script>