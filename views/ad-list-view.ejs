<%-partial('partial/header')%>
  <section>
<body class="body-wrapper">
  <section class="section-sm" style="background-color:whitesmoke">
    <div class="container">
      <div class="row">
        <div class="col-lg-3 col-md-4">
          <div class="category-sidebar">
            <div class="widget category-list">
              <h4 class="widget-header" style="background-color:aliceblue;padding:10px;margin-bottom:5px;">技能分類</h4>
              <ul class="category-list">
                <li><a href="/ad-list-view?adlistview=all">所有技能 <span></span></a></li>
                <li><a href="/ad-list-view?Class=學習">學習 <span></span></a></li>
                <li><a href="/ad-list-view?Class=生活">生活 <span></span></a></li>
                <li><a href="/ad-list-view?Class=創意">創意 <span></span></a></li>
                <li><a href="/ad-list-view?Class=科技">科技 <span></span></a></li>
                <li><a href="/ad-list-view?Class=娛樂">娛樂 <span></span></a></li>
                <li><a href="/ad-list-view?Class=其他">其他 <span></span></a></li>
              </ul>
            </div>

            <div class="widget category-list">
              <h4 class="widget-header" style="background-color:aliceblue;padding:10px;margin-bottom:5px;">地區分類</h4>
              <ul class="category-list">
                <li><a href="/ad-list-view?adlistview=all">所有技能 <span></span></a></li>
                <li><a href="/ad-list-view?local=北部">北部<span></span></a></li>
                <li><a href="/ad-list-view?local=中部">中部<span></span></a></li>
                <li><a href="/ad-list-view?local=南部">南部<span></span></a></li>
                <li><a href="/ad-list-view?local=東部">東部<span></span></a></li>
                <li><a href="/ad-list-view?local=離島">離島<span></span></a></li>
              </ul>
            </div>
          </div>
        </div>
        <div class="col-lg-9 col-md-8">
          <!-- 全部的技能  -->
          <% for(var i=0;i<data.length;i++){ %> 
            <div class="ad-listing-list mt-20 container" style="background-color:white; font-size: 20pt;">
              <div class="row p-lg-3 p-sm-5 p-4" >
                  <div class="col-lg-8">
                      <div class="row">
                          <div class="col-lg-6 col-md-10">
                              <div class="ad-listing-content">
                                  <div style="background-color:aliceblue;width:760px;">
                                      <a href="single?singleCase=<%=data[i].case_num %>" class="font-weight-bold"> <%=data[i].caseinfo %>  </a>
                                  </div>
                                  <ul class="list-inline mt-2 mb-3">
                                    <li class="list-inline-item">委託人：<%=data[i].id_account %></li>
                                    <li class="list-inline-item">地區：<%=data[i].local %></li>
                                    <li class="list-inline-item">地點：<%=data[i].area %></li>
                                    <li class="list-inline-item">價格：<%=data[i].coin %></li>
                                    <li class="list-inline-item">完成期限：<%=data[i].expectedTime.toDateString() %> </a></li>
                                  </ul>
                              </div>
                          </div>
                      </div>
                  </div>
              </div>
          </div>
          <% } %> 
          <!-- ad listing list  -->

          <!-- pagination -->
          <div class="pagination justify-content-center py-4">
            <nav aria-label="Page navigation example">
              <ul class="pagination">
                <li class="page-item">
                  <a class="page-link" href="#" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                  </a>
                </li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item active"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                  <a class="page-link" href="#" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Next</span>
                  </a>
                </li>
              </ul>
            </nav>
          </div>
          <!-- pagination -->
        </div>
      </div>
    </div>
  </section>
</body>
<%-partial('partial/footer')%>
</html>